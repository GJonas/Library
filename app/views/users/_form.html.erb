 <%= form_for(@user, :html => { :multipart => true }) do |f| %>
 <%= f.label :avatar %>
  <%= f.file_field :avatar %>

 <%= f.label :name %>
 <%= f.text_field :name %>

 <%= f.label :email %>
 <%= f.text_field :email %>

 <%= f.label :phone %>
 <%= f.text_field :phone %>

 <%= f.label :password %>
 <%= f.password_field :password %>

 <%= f.label :password_confirmation, "Confirmation" %>
 <%= f.password_field :password_confirmation %>
 <%= f.submit id: "submit_user" , class: "btn btn-large btn-primary" %>

 <% end %>