	<div class="span4">
		<div class="thumbnail">
			<%= image_tag book.avatar.url(:medium) %>
			<div class="caption">
				<%= link_to book.title, book %>
			</div>
			<p>	
			<ul>	
				<li><%= button_to "Emprestar", lend_book_path(book), :class => "btn btn-primary", :method => :post  %></li>
	
				<li><% if current_user.admin? %>
					<%= button_to "Deletar",book, :class => "btn btn-default", :method => :delete, data: { confirm: "You sure?" } %>
				<% end %></li>
				</ul> 
			</p>
		
		</div>
	</div>




